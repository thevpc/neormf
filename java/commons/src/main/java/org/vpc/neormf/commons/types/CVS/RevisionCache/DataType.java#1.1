public abstract class DataType implements Serializable {
    private boolean nullable;

    protected DataType(boolean nullable) {
        this.nullable = nullable;
    }

    public boolean isNullable() {
        return nullable;
    }

    public void setNullable(boolean nullable) {
        this.nullable = nullable;
    }


    public Object validateValue(Object object, String fieldName) throws DataException {
        if (!nullable && object == null) {
            throw new DataException("org.vpc.neormf.commons.types.DataType.Null.Message", new Object[]{fieldName});
        }
        return object;
    }

    public abstract Class toJavaType();

    public abstract int getTypeId();

}
